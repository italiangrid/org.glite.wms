<project name="wms jobsubmission component common properties">

	<!-- Include build properties to allow overwriting 
	     of properties for subsystem                    -->
	<property file="build.properties" />	

	<!-- ======================================================
              Define corresponding subsystem properties
	     ====================================================== -->

	<!-- Subsystem name -->
	<property name="subsystem.name" value="${wms.subsystem.name}"/>
		
	<!-- Subsystem prefix -->
	<property name="subsystem.prefix" value="${wms.subsystem.prefix}"/>

	<!-- ======================================================
              Define component properties
	     ====================================================== -->
		 		
	<!-- Component name prefix -->
	<property name="component.prefix" value="jobsubmission" />
			
	<!-- ======================================================
              Define general component properties
	     ====================================================== -->
	
	<import file="${component.general.properties.file}" />
						
	<!-- ======================================================
	      Define extra properties here ...
	     ====================================================== -->
	
        <property name="build.package.summary" value="WMS job submission module" />
                                                                                                                          
        <property name="build.package.description" value="WMS job submission: component used to submit job via condor and to monitor condor logs" />
                                                                                                                          
	<property name="m4files.list" value="optimize.m4 globus.m4 classads.m4 boost.m4 expat.m4 ares.m4 condorg.m4 libtar.m4 glite.m4 glite_wms.m4 glite_lb.m4 glite_wmsutils.m4 glite_wms_common.m4 glite_jdl.m4 glite_security.m4"/>
	
</project>
