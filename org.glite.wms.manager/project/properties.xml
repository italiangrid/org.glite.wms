<project name="wms manager component common properties">

	<!-- Include build properties to allow overwriting 
	     of properties for subsystem                    -->
	<property file="build.properties" />	

	<!-- ======================================================
              Define corresponding subsystem properties
	     ====================================================== -->

	<!-- Subsystem name -->
	<property name="subsystem.name" value="${wms.subsystem.name}"/>
		
	<!-- Subsystem prefix -->
	<property name="subsystem.prefix" value="${wms.subsystem.prefix}"/>

	<!-- ======================================================
              Define component properties
	     ====================================================== -->
		 		
	<!-- Component name prefix -->
	<property name="component.prefix" value="manager" />
			
	<!-- ======================================================
              Define general component properties
	     ====================================================== -->
	
	<import file="${component.general.properties.file}" />
						
	<!-- ======================================================
	      Define extra properties here ...
	     ====================================================== -->

        <property name="build.package.summary" value="WMS manager service" />
                                                                                                                          
        <property name="build.package.description" value="WMS manager: service and task queue" />

	<property name="m4files.list" value="globus.m4 classads.m4 boost.m4 expat.m4 ares.m4 log4cxx.m4 glite.m4 glite_lb.m4 glite_wmsutils.m4 glite_security.m4 glite_wms_common.m4 glite_wms_jdl.m4 glite_wms_helper.m4 glite_wms_jss.m4 glite_wms_ism.m4 cppunit.m4 optimize.m4"/>
	
</project>
