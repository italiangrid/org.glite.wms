#!/bin/sh

SCRIPT_LOCATION=/etc/rc.d/init.d

if [ -f ${SCRIPT_LOCATION}/@PACKAGE@-locallogger ]; then
  ${SCRIPT_LOCATION}/@PACKAGE@-locallogger status >/dev/null
  if [ $? -ne 0 ]; then
    ${SCRIPT_LOCATION}/@PACKAGE@-locallogger restart
  fi
fi

if [ -f ${SCRIPT_LOCATION}/@PACKAGE@-lbserver ]; then
  ${SCRIPT_LOCATION}/@PACKAGE@-lbserver status >/dev/null
  if [ $? -ne 0 ]; then
    ${SCRIPT_LOCATION}/@PACKAGE@-lbserver restart
  fi
fi

if [ -f ${SCRIPT_LOCATION}/@PACKAGE@-proxyrenewal ]; then
  ${SCRIPT_LOCATION}/@PACKAGE@-proxyrenewal status >/dev/null
  if [ $? -ne 0 ]; then
    ${SCRIPT_LOCATION}/@PACKAGE@-proxyrenewal restart
  fi
fi

if [ -f ${SCRIPT_LOCATION}/@PACKAGE@-lm ]; then
  ${SCRIPT_LOCATION}/@PACKAGE@-lm status >/dev/null
  if [ $? -eq 1 ]; then
    ${SCRIPT_LOCATION}/@PACKAGE@-lm restart
  fi
fi

if [ -f ${SCRIPT_LOCATION}/@PACKAGE@-jc ]; then
  ${SCRIPT_LOCATION}/@PACKAGE@-jc status >/dev/null
  if [ $? -eq 1 ]; then
    ${SCRIPT_LOCATION}/@PACKAGE@-jc restart
  fi
fi

if [ -f ${SCRIPT_LOCATION}/@PACKAGE@-ns ]; then
  ${SCRIPT_LOCATION}/@PACKAGE@-ns status >/dev/null
  if [ $? -eq 1 ]; then
    ${SCRIPT_LOCATION}/@PACKAGE@-ns restart
  fi
fi

if [ -f ${SCRIPT_LOCATION}/@PACKAGE@-wm ]; then
  ${SCRIPT_LOCATION}/@PACKAGE@-wm status >/dev/null
  if [ $? -eq 1 ]; then
    ${SCRIPT_LOCATION}/@PACKAGE@-wm restart
  fi
fi
