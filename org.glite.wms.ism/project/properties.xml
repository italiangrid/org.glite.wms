<project name="WMS Common component common properties">

	<!-- Include build properties to allow overwriting 
	     of properties for subsystem                    -->
	<property file="project/build.properties" />	

	<!-- ======================================================
          Define corresponding subsystem properties
		 ====================================================== -->

	<!-- Subsystem name -->
	<property name="subsystem.name" value="${wms.subsystem.name}"/>
		
	<!-- Subsystem prefix -->
	<property name="subsystem.prefix" value="${wms.subsystem.prefix}"/>

	<!-- ======================================================
          Define component properties
		 ====================================================== -->
		 		
	<!-- Component name prefix -->
	<property name="component.prefix" value="ism" />
			
	<!-- ======================================================
          Define general component properties
		 ====================================================== -->
	
	<import file="${component.general.properties.file}" />
						
	<!-- ======================================================
		 Define extra properties here ...
		 ====================================================== -->
		 
        <property name="m4files.list" value="boost.m4 classads.m4 globus.m4 glite.m4 cppunit.m4 globus.m4 gsoap.m4 glite_rgma.m4 xerces.m4 glite_wmsutils.m4 glite_wms_common.m4 glite_jdl.m4 glite_wms_ism.m4 glite_wms_classad_plugin.m4 glite_ce.m4 optimize.m4 log4cxx.m4 glite_security.m4"/>
        <property name="build.rpm.spec.requires" value="glite-essentials-cpp" />
</project>
