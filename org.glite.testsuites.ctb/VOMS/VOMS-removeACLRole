#!/bin/bash
# Date: 01/12/2006                                                                          #
# Author: Victor Galaktionov e-mail: victor.galaktionov@cern.ch                             #
# Description of the test: Remove ACL entry of Role                                         #
#                                                                                           #
# Input Parameters:                                                                         #
#       - VO name                                                                           #                                    
#       - VO host name                                                                      #
#       - rolename                                                                          #
#       - fake user certificate file path                                                   #
# Requisites:                                                                               #
#	- VOMS server                                                                       #
#       - 1 configured VO which is empty                                                    #
#                                                                                           #
#                                                                                           #                                                               
#############################################################################################
#                                                                                           #
# Note on security issues: the host and user certificates used by this test are dummy ones  #
# provided by the test utils package.                                                       #
#                                                                                           #
#############################################################################################
export voms_host=$1
source $SAME_SENSOR_HOME/tests/config_file

rm -rf $voms_tmp
rm -rf $voms_stderr
rm -rf $tempo

echo ""
date
echo "VOMS-removeACLRole - started, VO=$vo_name, Role=$ROLE, fake user=$USER"

echo "SCENARIO 1: empty VO"

voms-admin --vo=$vo_name -h $voms_host remove-acl-entry "Role=$ROLE"  $ALLOW $OP $USER 2> $voms_stderr

grep "org.glite.security.voms.service.NotInDatabase: Not in database: role" $voms_stderr

if [ $? == 1 ]; then
   echo "Not defined ERROR: <<"
   cat $voms_stderr
   echo ">>"
   echo "Test has failed"
   exit $SAME_ERROR
fi

echo "SCENARIO 2: Create role <$ROLE> and add ACL entries"
voms-admin --vo=$vo_name -h $voms_host create-role $ROLE


echo "Again remove-acl-entry"

voms-admin --vo=$vo_name -h $voms_host remove-acl-entry "Role=$ROLE"  $ALLOW $OP $USER 2> $voms_stderr

grep "org.glite.security.voms.service.NotInDatabase: Not in database: There is no entry in ACL for role" $voms_stderr
if [ $? == 1 ]; then
   echo "Not correct diagnose: <<$voms_stderr>>, Test has filed"
   exit $SAME_ERROR
fi

echo "OK, Create ACL entry for fake user for Role $ROLE"
voms-admin --vo=$vo_name -h $voms_host add-acl-entry  "Role=$ROLE" $ALLOW $OP $USER

echo "Again remove-acl-entry"
voms-admin --vo=$vo_name -h $voms_host remove-acl-entry "Role=$ROLE"  $ALLOW $OP $USER

echo "-------- Extract user subject-name by openssl from usercert.pem ------"
user_subject=`openssl x509 -in $USER -noout -subject | cut -d" " -f2-5`

echo "Check result using get-acl"

voms-admin --vo=$vo_name -h $voms_host get-acl "Role=$ROLE" > $voms_tmp

grep "$user_subject" $voms_tmp

if [ $? == 0 ]; then
   echo "LIST: <<$ops>>, Test has failed"
   exit $SAME_ERROR
fi

echo "OK, ACL entry has removed"
echo "Clear VO, delete Role"
voms-admin --vo=$vo_name delete-role $ROLE

rm -rf $voms_tmp
rm -rf $voms_stderr
rm -rf $tempo

echo "Test is OK"
exit $SAME_OK
