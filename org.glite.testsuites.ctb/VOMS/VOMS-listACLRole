#!/bin/bash
# Date: 01/12/2006                                                                          #
# Author: Victor Galaktionov e-mail: victor.galaktionov@cern.ch                             #
# Description of the test: Test ACL  list command (get-acl)                                 #
#                                                                                           #
# Input Parameters:                                                                         #
#       - VO name                                                                           #                                    
#       - VO host name                                                                      #
#       - Role                                                                              #
#       - fake user certificate file path                                                   #
# Requisites:                                                                               #
#	- VOMS server                                                                       #
#       - 1 configured VO which is empty                                                    #
#                                                                                           #
#                                                                                           #                                                               
#############################################################################################
#                                                                                           #
# Note on security issues: the host and user certificates used by this test are dummy ones  #
# provided by the test utils package.                                                       #
#                                                                                           #
#############################################################################################
export voms_host=$1
source $SAME_SENSOR_HOME/tests/config_file

rm -rf $voms_tmp
rm -rf $voms_stderr
rm -rf $tempo

echo ""
date
echo "VOMS-listACLRole - started, VO=$vo_name, group=$GROUP, Role=$ROLE"
op1="list"
op2="create"
op3="delete"
allow="allow"

echo "SCENARIO 1: empty VO"

voms-admin --vo=$vo_name -h $voms_host get-acl "Role=$ROLE" 2> $voms_stderr

grep "org.glite.security.voms.service.NotInDatabase: Not in database: role" $voms_stderr

if [ $? == 1 ]; then
   echo "Not defined ERROR: <<"
   cat $voms_stderr
   echo ">>"
   echo "Test has failed"
   exit $SAME_ERROR
fi

echo "SCENARIO 2: Create role <$ROLE> and add 3 ACL entries for user $USER"
voms-admin --vo=$vo_name -h $voms_host create-role $ROLE

echo "Check list ACL for empty new role"

voms-admin --vo=$vo_name -h $voms_host get-acl "Role=$ROLE" 2> $voms_stderr

grep "ACL is empty or not defined!" $voms_stderr

if [ $? == 1 ]; then
   echo "Not defined ERROR: <<"
   cat $voms_stderr
   echo ">>"
   echo "Test has failed"
   exit $SAME_ERROR
fi

echo "Create ACL entry for fake user for role=$ROLE"
voms-admin --vo=$vo_name -h $voms_host add-acl-entry  "Role=$ROLE" $allow $op1 $USER
voms-admin --vo=$vo_name -h $voms_host add-acl-entry  "Role=$ROLE" $allow $op2 $USER
voms-admin --vo=$vo_name -h $voms_host add-acl-entry  "Role=$ROLE" $allow $op3 $USER

echo "Again get-acl"
voms-admin --vo=$vo_name -h $voms_host get-acl "Role=$ROLE" > $voms_tmp

#cat $voms_tmp

echo "-------- Extract by openssl from usercert.pem ------"
user_subject=`openssl x509 -in $USER -noout -subject | cut -d" " -f2-5`
grep "$user_subject" $voms_tmp > $tempo

#cat $tempo
echo "Check added ACL entries"
ops=`cat $tempo | cut -d"|" -f3`
echo $ops > $tempo

grep "$op1" $tempo
if [ $? == 1 ]; then
   echo "LIST: <<$ops>>, Test has filed"
   exit $SAME_ERROR
fi
grep "$op2" $tempo
if [ $? == 1 ]; then
   echo "LIST: <<$ops>>, Test has filed"
   exit $SAME_ERROR
fi
grep "$op3" $tempo
if [ $? == 1 ]; then
   echo "LIST: <<$ops>>, Test has filed"
   exit $SAME_ERROR
fi


echo "Clear VO"
voms-admin --vo=$vo_name delete-role $ROLE

rm -rf $voms_tmp
rm -rf $voms_stderr
rm -rf $tempo

echo "Test is OK"
exit $SAME_OK
