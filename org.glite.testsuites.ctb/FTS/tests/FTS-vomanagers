#Script for testing FTS channel add operation

showUsage()
{
 echo "Usage: FTS-vomanagers --fts <fts hostname> --channel <channel name>"
 echo "Options: "
 echo "          --fts  <fts hostname> "
 echo "                   The name of the FTS host."
 echo "          --channel  <channel name> "
 echo "                   The channel to use for submitting a file transfer"
 echo "          --bdii  <bdii hostname> "
 echo "                   The top-level BDII hostname"
 echo "          --vo  <VO name> "
 echo "                   VO name"
 echo "          --timeout  <timeout> "
 echo "                   timeout in seconds"
}

if [ $# -ne 10 ];then
  showUsage
  echo
  echo "-TEST FAILED-"
  exit 2
fi

until [ -z "$1" ] 
do
  case "$1" in
     --fts)
           if [ -z "$2" ]; then
                shift 1
           else
                FTS_HOST=$2
                shift 2
           fi
     ;;
     --channel)
           if [ -z "$2" ]; then
                shift 1
           else
                CHANNEL=$2
                shift 2
           fi
     ;;
     --bdii)
           if [ -z "$2" ]; then
                shift 1
           else
                BDII_HOST=$2
                shift 2
           fi
     ;;
     --vo)
           if [ -z "$2" ]; then
                shift 1
           else
                VO_NAME=$2
                shift 2
           fi
     ;;
     --timeout)
           if [ -z "$2" ]; then
                shift 1
           else
                TIMEOUT=$2
                shift 2
           fi
     ;;
          *)
           showUsage
           exit 2
    ;;
  esac
done

#source functions definitions
source FTS-common
source FTS-V-common

#0.1) Check for valid proxy
ProxyExist=`voms-proxy-info 2>/dev/null | grep timeleft | wc -l`
ProxyExpired=`voms-proxy-info 2>/dev/null | grep  "timeleft  : 0:00:00" | wc -l`

if [ $ProxyExist -gt 0 -a $ProxyExpired -eq 0 ]; then
         echo ""
         echo "Using proxy from: $X509_USER_PROXY"
else
         echo ""
         echo ">>> NOTE: Valid proxy is needed for this test!"
         echo ""
         if [ $ProxyExpired -gt 0 ]; then
            echo ">>> NOTE: Proxy credential expired!"
         fi
         echo "-TEST FAILED-"
         exit 1
fi

echo "Set user DN"
echo ""
USERDN=`glite-voms-proxy-info -identity`
echo "User DN: $USERDN"


echo "Check list-vomanagers"
list-vomanagers $VO_NAME
if [ $? != 0 ]; then
    echo "list-vomanagers - failed"
    exit 1
fi
echo "OK"

echo "Check add-vomanager"
add-vomanager $VO_NAME "$USERDN"
if [ $? != 0 ]; then
    echo "list-vomanagers - failed"
    exit 1
fi
echo "OK"

#echo "Again check list-vomanagers"
#list-vomanagers $VO_NAME
#if [ $? != 0 ]; then
#    echo "list-vomanagers - failed"
#    exit 1
#fi
#echo "OK"

echo "Check remove-vomanagers"
remove-vomanager  $VO_NAME "$USERDN"
if [ $? != 0 ]; then
    echo "list-vomanagers - failed"
    exit 1
fi

echo "Check special parameters fo vomanagers"
special-check-vomanagers
if [ $? != 0 ]; then
    echo "vomanagers - failed"
    exit 1
fi
echo "OK"

exit 0