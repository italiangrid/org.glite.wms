#source functions definitions
source FTS-common

#Script for testing FTS channel add operation

showUsage()
{
 echo "Usage: FTS-channel-drop --fts <fts hostname> --channel <channel name>"
 echo "Options: "
 echo "          --fts  <fts hostname> "
 echo "                   The name of the FTS host."
 echo "          --channel  <channel name> "
 echo "                   The channel to use for submitting a file transfer"
}

# FTS_HOST must be set.
# Added by Victor Galaktionov 24/11/209
function special-check-channel-drop()
{
    echo "special-check-channel-drop($1)"

    local CHANNEL=$1

    echo "1. glite-transfer-channel-drop  -h"
    glite-transfer-channel-drop  -h > /dev/null
    if [ $? != 0 ]; then
    echo "glite-transfer-channel-drop -h - failure"
    return 1
    fi
    echo "2. glite-transfer-channel-drop  -q"
    glite-transfer-channel-drop  -q
    if [ $? == 0 ]; then
    echo "glite-transfer-channel-drop -q - failure"
    return 1
     fi
    echo "3. glite-transfer-channel-drop  -V"
    glite-transfer-channel-drop  -V
    if [ $? != 0 ]; then
    echo "glite-transfer-channel-drop -V - failure"
    return 1
    fi
    return 0
}

# FTS_HOST must be set.
# Added by Victor Galaktionov 24/11/209
function channel-drop()
{
    echo "channel-drop($1)"
    glite-transfer-channel-drop  -s https://$FTS_HOST:8443/glite-data-transfer-fts/services/ChannelManagement $1 2> message
    if [ $? != 0 ]; then
    echo "Drop channel command - failed"
    cat message
    return 1
    fi
    return 0
}


if [ $# -ne 4 ];then
  showUsage
  echo
  echo "-TEST FAILED-"
  exit 2
fi

until [ -z "$1" ] 
do
  case "$1" in
     --fts)
           if [ -z "$2" ]; then
                shift 1
           else
                FTS_HOST=$2
                shift 2
           fi
     ;;
     --channel)
           if [ -z "$2" ]; then
                shift 1
           else
                CHANNEL=$2
                shift 2
           fi
     ;;
          *)
           showUsage
           exit 2
    ;;
  esac
done

echo "1) Test if channel exists"

channel-exists $CHANNEL
if [ $? != 0 ]; then
    echo "Drop nonexisting channel"
    channel-drop $CHANNEL
    if [ $? == 0 ]; then
	echo "Noncorrect operation"
	exit 1
    fi
    grep "does not exist" message
    if [ $? != 0 ]; then
	echo " Noncorrect operation"
	exit 1
    fi
    echo "OK"
    echo "Channel not exists, create it"
 
    SITE_A="CERN-TB-CERN"
    SITE_B="CINPCERTTB"

    echo "Add new channel"
    simple-channel-add $CHANNEL $SITE_A $SITE_B
    if [ $? != 0 ]; then
	echo "Add channel - failed"
	exit 1
    fi
fi        
echo "OK"

echo "Drop channel"
channel-drop $CHANNEL
if [ $? != 0 ]; then
    echo "Drop channel - failed"
    exit 1
fi        
echo "OK"

echo "Drop special parameters"
special-check-channel-drop $CHANNEL
if [ $? != 0 ]; then
    echo "Special Drop channel - failed"
    exit 1
fi        

echo "-TEST PASSED-"
exit 0
