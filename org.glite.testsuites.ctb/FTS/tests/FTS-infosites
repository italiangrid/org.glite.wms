
source ../FTS-certconfig

nodeName=$FTS_HOST
echo "Checking if FTS node $nodeName is registered in the infosystem:"
ftsURL=`lcg-infosites --vo $VO fts | grep -w $nodeName | head -n 1`
echo "FTS URL: $ftsURL"
echo "summary: $ftsURL"
echo $ftsURL > ftsURL
if [ "x$ftsURL" == "x" ] ; then
    exit 1
else
    exit 0
fi

