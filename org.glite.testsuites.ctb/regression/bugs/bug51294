test_bug51294_pre () {
  # Create temporary JDL file
echo "
Executable = \"/bin/hostname\";
StdOutput  = \"std.out\";
StdError   = \"std.err\";
OutputSandbox = {\"std.err\",\"std.out\"};
VirtualOrganisation = \"dteam\";
" > "/tmp/$$.jdl"
  # Return
  return $REGTEST_OK
}

test_bug51294_post () {
  # Remove temporary JDL file
  rm -f "/tmp/$$.jdl"
  # Return
  return $REGTEST_OK
}

test_bug51294 () {
  # Run glite-wms-job-submit
  command="glite-wms-job-submit -a --to 23:59 /tmp/$$.jdl"
  message="Running glite-wms-job-submit -a --to 23:59"
  run_command "${command}" "${message}"

  # Success?
  if [ $? -ne ${REGTEST_OK} ]; then
    return ${REGTEST_FAIL}
  fi

  # Recover Job ID
  JOB_ID=`echo $OUTPUT | grep -oP "(?<=Your job identifier is: )https://\w+(\.\w+)+(:[0-9]+)?/\S+"`

  # Cancel job
  command="glite-wms-job-cancel ${JOB_ID}"
  message="Cancelling submitted job ${JOB_ID}"
  run_command "${command}" "${message}"

  if [ $? -ne ${REGTEST_OK} ]; then
    return ${REGTEST_FAIL}
  fi
}

