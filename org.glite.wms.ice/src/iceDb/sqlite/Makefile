LIB = libsqlite3.a

OBJ = sqlite3.o

all: $(LIB)

CFLAGS = -Wall -g -DSQLITE_THREADSAFE=1 -D_FILE_OFFSET_BITS=64 -DSQLITE_ENABLE_MEMORY_MANAGEMENT=1 -DSTDC_HEADERS=1 -DHAVE_SYS_TYPES_H=1 -DHAVE_SYS_STAT_H=1 -DHAVE_STDLIB_H=1 -DHAVE_STRING_H=1 -DHAVE_MEMORY_H=1 -DHAVE_STRINGS_H=1 -DHAVE_INTTYPES_H=1 -DHAVE_STDINT_H=1 -DHAVE_UNISTD_H=1 -DHAVE_DLFCN_H=1 -DHAVE_FDATASYNC=1 -DHAVE_USLEEP=1 -DHAVE_LOCALTIME_R=1 -DHAVE_GMTIME_R=1 -DHAVE_READLINE=1 -I.

libsqlite3.a: $(OBJ)
	$(AR) rv $@ $^
	ranlib $@

sqlite3.o: sqlite3.c
	$(CC) $(CFLAGS) -o $@ -c sqlite3.c

clean: 
	rm -f $(OBJ) $(LIB) *~

install:
