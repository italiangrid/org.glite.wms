<project name="WMS Helper component common properties">

	<!-- Include build properties to allow overwriting 
	     of properties for subsystem                    -->
	<property file="project/build.properties" />	

	<!-- ======================================================
          Define corresponding subsystem properties
		 ====================================================== -->

	<!-- Subsystem name -->
	<property name="subsystem.name" value="${wms.subsystem.name}"/>
		
	<!-- Subsystem prefix -->
	<property name="subsystem.prefix" value="${wms.subsystem.prefix}"/>

	<!-- ======================================================
          Define component properties
		 ====================================================== -->
		 		
	<!-- Component name prefix -->
	<property name="component.prefix" value="helper" />
			
	<!-- ======================================================
          Define general component properties
		 ====================================================== -->
	
	<import file="${component.general.properties.file}" />
						
	<!-- ======================================================
		 Define extra properties here ...
		 ====================================================== -->
		 
	<property name="m4files.list" value="glite_wms_optional.m4 boost.m4 classads.m4 globus.m4 glite.m4 replica.m4 glite_wmsutils.m4 glite_wms_common.m4 glite_wms_matchmaking.m4 glite_wms_broker.m4 glite_wms_brokerinfo.m4 glite_wms_ism.m4 optimize.m4 cppunit.m4 glite_gpbox.m4 glite_security.m4 glite_lb.m4 glite_jdl.m4 glite_jp.m4"/>

</project>
