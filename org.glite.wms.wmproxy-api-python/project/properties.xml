<project name="WMS wmproxy api python component common properties">

	<!-- Include build properties to allow overwriting 
	     of properties for subsystem                    -->
	<property file="project/build.properties" />	

	<!-- ======================================================
          Define corresponding subsystem properties
		 ====================================================== -->

	<!-- Subsystem name -->
	<property name="subsystem.name" value="${wms.subsystem.name}"/>
		
	<!-- Subsystem prefix -->
	<property name="subsystem.prefix" value="${wms.subsystem.prefix}"/>

	<!-- ======================================================
          Define component properties
		 ====================================================== -->
		 		
	<!-- Component name prefix -->
	<property name="component.prefix" value="wmproxy-api-python" />
			
	<!-- ======================================================
          Define general component properties
		 ====================================================== -->
	
	<import file="${component.general.properties.file}" />
						
	<!-- ======================================================
		 Define extra properties here ...
		 ====================================================== -->
		 
	<property name="m4files.list" value="glite.m4"/>
 
        <property name="build.package.summary" value="Files for gLite WMS WMProxy client Python API" />
        <property name="build.package.description" value="gLite WMS WMProxy client Python API library" />
        
        <property name="build.rpm.spec.arch" value="noarch" />

</project>
