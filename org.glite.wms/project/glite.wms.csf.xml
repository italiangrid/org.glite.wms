	</target>
	<target name="get.thirdparty-loki.tag" unless="thirdparty-loki.head">
		<cvs-co package="org.glite.wms.thirdparty-loki"
			tag="${org.glite.wms.thirdparty-loki.version}" />
	</target>

	<!-- Common -->
 	<target name="common" depends="boost,classads,globus,get.common.head, get.common.tag"/>
	<target name="get.common.head" if="common.head">
		<cvs-co package="org.glite.wms.common" />
	</target>
	<target name="get.common.tag" unless="common.head">
		<cvs-co package="org.glite.wms.common"
			tag="${org.glite.wms.common.version}" />
	</target>

    	<!-- Tls -->
    	<target name="tls" depends="boost,classads,globus,get.tls.head, get.tls.tag"/>
